void AIThinkLurkerMP (int player, unit aiUnit, unitgroup scanGroup) {
    order ord;
    unitgroup validTargets;
    wave unitWave;
    wavetarget unitWaveTarget;  
    unitgroup waveEscortGroup;
    unit waveEscortUnit;
    aifilter filter;
    
