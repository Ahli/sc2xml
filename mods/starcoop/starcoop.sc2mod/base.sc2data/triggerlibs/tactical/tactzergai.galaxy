void AIThinkViper (int player, unit aiUnit, unitgroup scanGroup) {
    order ord;
    marker mark;
    
    if(AIPlayerDifficulty(player) <= c_campNormal) {
        return;
    }

    ord = ViperConsumption(player, aiUnit, scanGroup);
    if (ord != null) {
        AICast(aiUnit, ord, c_noMarker, c_castHold);
        return;
    }
    
    ord = BlindingCloud(player, aiUnit, scanGroup);
    if (ord != null) {
        AICast(aiUnit, ord, c_noMarker, c_castHold);
        return;
    }

    mark = AIMarker(aiUnit, c_MK_ViperAbduct);
    ord = Abduct(player, aiUnit, scanGroup, mark);
    if (ord != null) {
        AICast(aiUnit, ord, mark, c_castHold);
        return;
    }
    
    if(AIPlayerDifficulty(player) <= c_campAdvanced) {
        return;
    }

    mark = AIMarker(aiUnit, c_MK_ViperParasiticBomb);
    ord = ParasiticBomb(player, aiUnit, scanGroup, mark);
    if (ord != null) {
        AICast(aiUnit, ord, mark, c_castHold);
        return;
    }
}

//Viper Difficulty Cooldowns
fixed ParasiticBombCooldown_Hard = 20;
fixed ParasiticBombCooldown_Brutal = 15;
fixed AbductCoolDown_Hard = 13;
fixed AbductCoolDown_Brutal = 8;
fixed DisablingCloudCoolDown_Hard = 60;
fixed DisablingCloudCoolDown_Brutal = 45;
fixed ViperConsumptionCoolDown_Hard = 10;
fixed ViperConsumptionCoolDown_Brutal = 10;

const int c_ParasiticBombCoolDown = c_tactTimerFirst;
const int c_AbductCoolDown = c_tactTimerSecond;
const int c_DisablingCloudCoolDown = c_tactTimerThird;
const int c_ViperConsumptionCoolDown = c_tactTimerFourth;

void AIThinkViperAC (int player, unit aiUnit, unitgroup scanGroup) {
    order ord;
    marker mark;
    fixed cooldown;
    int diff = AIPlayerDifficulty(player);
    
    if(AIPlayerDifficulty(player) <= c_campNormal) {
        return;
    }

    //Ordered abilities with the longest cooldown first, so the Vipers do not
    //get stuck overcasting low cooldown abilities and never use the others
    
    //Parasitic Bomb
    if(AIPlayerDifficulty(player) > c_campNormal) {
        if (AITactCooldownAllow(aiUnit, c_ParasiticBombCoolDown)) {
            mark = AIMarker(aiUnit, c_MK_ViperParasiticBomb);
            ord = ParasiticBomb(player, aiUnit, scanGroup, mark);
            if (ord != null) {
                //AICast(aiUnit, ord, mark, c_castHold);
                if (diff == c_campAdvanced) {
                    cooldown = ParasiticBombCooldown_Hard;
                }
                else if (diff == c_campExpert) {
                    cooldown = ParasiticBombCooldown_Brutal;
                }
                AICastCooldown(aiUnit, ord, mark, c_castHold, c_ParasiticBombCoolDown, cooldown);
                return;
            }
        }
    }
    
    //Disabling Cloud
    if(AIPlayerDifficulty(player) > c_campAdvanced) {       
        if (AITactCooldownAllow(aiUnit, c_DisablingCloudCoolDown)) {
            ord = DisablingCloud(player, aiUnit, scanGroup);
            if (ord != null) {
                //AICast(aiUnit, ord, c_noMarker, c_castHold);
                if (diff == c_campAdvanced) {
                    cooldown = DisablingCloudCoolDown_Hard;
                }
                else if (diff == c_campExpert) {
                    cooldown = DisablingCloudCoolDown_Brutal;
                }
                AICastCooldown(aiUnit, ord, c_noMarker, c_castHold, c_DisablingCloudCoolDown, cooldown);    
                return;
            }
        }
    }

    //Abduct    
    if(AIPlayerDifficulty(player) > c_campNormal) {
        if (AITactCooldownAllow(aiUnit, c_AbductCoolDown)) {
            mark = AIMarker(aiUnit, c_MK_ViperAbduct);
            ord = Abduct(player, aiUnit, scanGroup, mark);
            if (ord != null) {
                //AICast(aiUnit, ord, mark, c_castHold);
                if (diff == c_campAdvanced) {
                    cooldown = AbductCoolDown_Hard;
                }
                else if (diff == c_campExpert) {
                    cooldown = AbductCoolDown_Brutal;
                }
                AICastCooldown(aiUnit, ord, mark, c_castHold, c_AbductCoolDown, cooldown);          
                return;
            }
        }
    }
    
    //Consumption
    if(AIPlayerDifficulty(player) > c_campNormal) {
        if (AITactCooldownAllow(aiUnit, c_ViperConsumptionCoolDown)) {
            ord = ViperConsumption(player, aiUnit, scanGroup);
            if (ord != null) {
                //AICast(aiUnit, ord, c_noMarker, c_castHold);
                if (diff == c_campAdvanced) {
                    cooldown = ViperConsumptionCoolDown_Hard;
                }
                else if (diff == c_campExpert) {
                    cooldown = ViperConsumptionCoolDown_Brutal;
                }
                AICastCooldown(aiUnit, ord, c_noMarker, c_castHold, c_ViperConsumptionCoolDown, cooldown);  
                return;
            }
        }
    }
}

